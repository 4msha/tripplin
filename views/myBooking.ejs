<%- include ('./partials/header') %>
<div class="container">
  <div class="card w-100">
    <div class="card-body">
      <h5 class="card-title">Card title</h5>
      <p class="card-text">
        With supporting text below as a natural lead-in to additional content.
      </p>
      <a href="#" class="btn btn-primary">Button</a>
    </div>
  </div>
  <% bookings.forEach(function(booking){ %>
    <div class="container-fluid">
    <div class="row">
    <div class="card mb-3 w-85" >
        <div class="row no-gutters">
          <div class="col-md-4">
            <img src="<%=booking.car.image%>" class="card-img" alt="..." style="width:100%;height:100%">
          </div>
          <div class="col-md-4">
            <div class="card-body">
              <h5 class="card-title"><%=booking.car.name%></h5>
              <p class="card-text">
                  <p>No of Seats -<%=booking.car.noOfSeats%></p>
                  <p>Car No -<%=booking.car.carNo%></p>
                  <% if(currentUser.username=='admin'){ %>
                    <a href="/<%=booking._id%>/return" class="btn btn-info">Return Car</a>
                    <% } %>
              </p>
            </div>
          </div>
          <div class="card border-light mb-3 col-md-4" style="max-width: 18rem; display:inline;">
            <div class="card-header">Booking Info</div>
            <div class="card-body">
              <p class="card-text">
                <p>Pickup - Date -<%=booking.pickup.date%>
                    Time -<%=booking.pickup.time%> </p>
                <p>Drop- Date -<%=booking.drop.date%>
                   Time -<%=booking.drop.time%> </p>
               </p>    
            </div>
        </div>
      </div>
    </div>
</div>
<%  }); %>
</div>
</div>

<%- include ('./partials/footer') %>
