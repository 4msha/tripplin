<%- include ('../partials/header') %>
<div class="row">
  <h1 style="text-align: center">Edit <%= car.name %></h1>
  <div style="width: 30%; margin: 25px auto;">
    <form action="/cars/<%=car._id%>?_method=PUT" method="POST">
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          name="name"
          value="<%= car.name %>"
        />
      </div>
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          name="image"
          value="<%= car.image %>"
        />
      </div>
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          name="description"
          value="<%= car.noOfSeats %>"
        />
      </div>
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          name="description"
          value="<%= car.carNo %>"
        />
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">Update!</button>
      </div>
    </form>
    <a href="/cars">Go Back</a>
  </div>
</div>
<%- include ('../partials/footer') %>
