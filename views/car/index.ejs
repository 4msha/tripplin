<%- include ('../partials/header') %>

<div class="container">
  <div class="jumbotron">
    <div class="container-fluid">
      <h1>Welcome to The World Of Cars</h1>
      <h6>
        You can Not Only Book a Car But Give Your Car for Booking
      </h6>

      <a href="/cars/new" class="btn btn-outline-danger">Add Your Car</a>
    </div>
  </div>

  <div class="row row-cols-1 row-cols-md-2">
    <% cars.forEach(function(car){ if(car.isAvailable){%>
    <div class="col mb-4">
      <div class="card shadow-lg rounded">
        <img src="<%=car.image%>" class="card-img-top" alt="..." />
        <div class="card-body">
          <h5 class="card-title"><%=car.name%></h5>
          <p class="card-text">
            <svg
              class="bi bi-collection-fill"
              width="1em"
              height="1em"
              viewBox="0 0 16 16"
              fill="currentColor"
              xmlns="http://www.w3.org/2000/svg"
            >
              <rect
                width="16"
                height="10"
                rx="1.5"
                transform="matrix(1 0 0 -1 0 14.5)"
              />
              <path
                fill-rule="evenodd"
                d="M2 3a.5.5 0 00.5.5h11a.5.5 0 000-1h-11A.5.5 0 002 3zm2-2a.5.5 0 00.5.5h7a.5.5 0 000-1h-7A.5.5 0 004 1z"
                clip-rule="evenodd"
              />
            </svg>
            <%=car.noOfSeats%> no. of seats Car Plate Number- <%=car.carNo%>
          </p>
          <a href="/cars/<%=car._id%>" class="btn-info">Book Now!</a>
        </div>
      </div>
    </div>
    <% } }); %>
  </div>
</div>

<%- include ('../partials/footer') %>
